# SenseChat MVP 環境設定ファイル
# このファイルをコピーして .env として使用してください

# ===========================================
# LLM API設定
# ===========================================

# OpenAI API（メイン: 高品質）
OPENAI_API_KEY=your_openai_api_key_here

# OpenRouter API（推奨: 複数モデル対応）
OPENROUTER_API_KEY=your_openrouter_api_key_here

# 使用するプロバイダー（openai_gpt4, openrouter_claude, openrouter_gpt4o, openrouter_gemini）
DEFAULT_LLM_PROVIDER=openai_gpt4

# ===========================================
# アプリケーション設定
# ===========================================

# アプリケーション名
APP_NAME=SenseChat MVP

# デバッグモード
DEBUG=true

# ログレベル (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# サーバーホスト
HOST=0.0.0.0

# サーバーポート
PORT=8000

# ===========================================
# データベース設定
# ===========================================

# データベースURL（開発: SQLite、本番: PostgreSQL）
# SQLite（開発用）
DATABASE_URL=sqlite:///./data/sensechat.db

# PostgreSQL（本番用）
# DATABASE_URL=postgresql://sensechat:sensechat_password@localhost:5432/sensechat

# PostgreSQL設定（本番環境用）
POSTGRES_DB=sensechat
POSTGRES_USER=sensechat
POSTGRES_PASSWORD=sensechat_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# データベースファイルパス（SQLite用）
DB_FILE_PATH=./data/sensechat.db

# ===========================================
# ユーザー設定
# ===========================================

# ユーザー設定ファイルパス
USERS_CONFIG=config/users.json

# デフォルト言語
DEFAULT_LANGUAGE=ja

# デフォルトスタイル
DEFAULT_STYLE_PRESET=biz_formal

# ===========================================
# AI/ML設定
# ===========================================

# Embeddingモデル
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ベクトル次元数
VECTOR_DIMENSION=384

# FAISSインデックスファイルパス
FAISS_INDEX_PATH=./data/faiss_index

# 最大メッセージ長
MAX_MESSAGE_LENGTH=1000

# ===========================================
# セキュリティ設定
# ===========================================

# 暗号化キー（本番環境では変更必須）
ENCRYPTION_KEY=your_encryption_key_here

# JWT秘密鍵（本番環境では変更必須）
JWT_SECRET_KEY=your_jwt_secret_key_here

# ===========================================
# 外部サービス設定
# ===========================================

# レート制限（リクエスト/分）
RATE_LIMIT_PER_MINUTE=100

# APIタイムアウト（秒）
API_TIMEOUT=30

# リトライ回数
MAX_RETRIES=3

# ===========================================
# ログ設定
# ===========================================

# ログファイルパス
LOG_FILE_PATH=./logs/sensechat.log

# ログファイル最大サイズ（MB）
LOG_MAX_SIZE=10

# ログファイル保持数
LOG_BACKUP_COUNT=5

# ===========================================
# 開発用設定
# ===========================================

# 開発モード
DEVELOPMENT_MODE=true

# ホットリロード
HOT_RELOAD=true

# テストデータベース
TEST_DATABASE_URL=sqlite:///./test_sensechat.db

# モックAPI使用
USE_MOCK_API=false
