# SenseChat MVP 環境設定ファイル
# このファイルをコピーして .env として使用してください

# ===========================================
# LLM API設定
# ===========================================

# Google PaLM API（推奨: コスト重視）
GOOGLE_PALM_API_KEY=your_google_palm_api_key_here

# OpenAI API（オプション: 高品質重視）
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API（オプション）
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# アプリケーション設定
# ===========================================

# アプリケーション名
APP_NAME=SenseChat MVP

# デバッグモード
DEBUG=true

# ログレベル (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# サーバーホスト
HOST=0.0.0.0

# サーバーポート
PORT=8000

# ===========================================
# データベース設定
# ===========================================

# SQLiteデータベースURL
DATABASE_URL=sqlite:///./sensechat.db

# データベースファイルパス
DB_FILE_PATH=./data/sensechat.db

# ===========================================
# ユーザー設定
# ===========================================

# ユーザー設定ファイルパス
USERS_CONFIG=config/users.json

# デフォルト言語
DEFAULT_LANGUAGE=ja

# デフォルトスタイル
DEFAULT_STYLE_PRESET=biz_formal

# ===========================================
# AI/ML設定
# ===========================================

# Embeddingモデル
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ベクトル次元数
VECTOR_DIMENSION=384

# FAISSインデックスファイルパス
FAISS_INDEX_PATH=./data/faiss_index

# 最大メッセージ長
MAX_MESSAGE_LENGTH=1000

# ===========================================
# セキュリティ設定
# ===========================================

# 暗号化キー（本番環境では変更必須）
ENCRYPTION_KEY=your_encryption_key_here

# JWT秘密鍵（本番環境では変更必須）
JWT_SECRET_KEY=your_jwt_secret_key_here

# ===========================================
# 外部サービス設定
# ===========================================

# レート制限（リクエスト/分）
RATE_LIMIT_PER_MINUTE=100

# APIタイムアウト（秒）
API_TIMEOUT=30

# リトライ回数
MAX_RETRIES=3

# ===========================================
# ログ設定
# ===========================================

# ログファイルパス
LOG_FILE_PATH=./logs/sensechat.log

# ログファイル最大サイズ（MB）
LOG_MAX_SIZE=10

# ログファイル保持数
LOG_BACKUP_COUNT=5

# ===========================================
# 開発用設定
# ===========================================

# 開発モード
DEVELOPMENT_MODE=true

# ホットリロード
HOT_RELOAD=true

# テストデータベース
TEST_DATABASE_URL=sqlite:///./test_sensechat.db

# モックAPI使用
USE_MOCK_API=false
